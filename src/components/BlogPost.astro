---
const { title, url, image, alt } = Astro.props;
---

<div>
  <a href={url}>
    <img class="logo" src={image} alt={alt} />
    {title}
  </a>
</div>

<style>
    .logo {
        width: 100px;
        height: 100px;
        object-fit: contain;
    }
    
    a {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-decoration: none;
        background-color: antiquewhite;
        padding: 5px 10px;
        overflow: hidden;
        border-radius: 13px;
        color: black;
        font-size: 1.2rem;
        font-weight: 600;
        transition: all 0.3s ease-out;
    }

    a:hover {
        box-shadow: 0px 0px 16px grey;
    }
</style>